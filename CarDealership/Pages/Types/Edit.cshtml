@page
@model CarDealership.Pages.Types.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit car type</h1>

<h4>Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Type.ID" />
            <div class="form-group">
                <label asp-for="Type.TypeDescription" class="control-label"></label>
                <input asp-for="Type.TypeDescription" class="form-control" />
                <span asp-validation-for="Type.TypeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
